<h1><%= @cocktail.name %></h1>
<p><%= @cocktail.description %></p>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> -
      <%= dose.description %>
      <%= link_to "delete",
        dose_path(dose),
        method: :delete,
        data: {confirm: "Are you sure"}  %>
    </li>
  <% end %>
</ul>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Edit description", edit_cocktail_path(@cocktail) %>
<%= link_to "Back to cocktails list", root_path %>


